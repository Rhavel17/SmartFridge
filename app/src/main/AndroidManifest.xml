<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartfridge">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartFridge">


        <activity android:name=".shoppinglist.EditListActivity" />
        <activity
            android:name=".shoppinglist.ViewListActivity"
            android:parentActivityName=".shoppinglist.ShoppingListActivity" />
        <activity
            android:name=".insidefridge.ViewFoodListActivity"
            android:parentActivityName=".insidefridge.FoodListActivity" />
        <activity
            android:name=".insidefridge.AddFoodActivity"
            android:parentActivityName=".insidefridge.FoodListActivity" />
        <activity android:name=".insidefridge.EditFoodActivity" />
        <activity
            android:name=".insidefridge.FoodListActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".fridgecontents.QuickAddActivity"
            android:parentActivityName=".fridgecontents.FridgeContentsActivity" />
        <activity
            android:name=".fridgecontents.SeeInsideActivity"
            android:parentActivityName=".fridgecontents.FridgeContentsActivity" />
        <activity
            android:name=".fridgecontents.AddFoodInsideActivity"
            android:parentActivityName=".fridgecontents.FridgeContentsActivity" />
        <activity
            android:name=".shoppinglist.AddListActivity"
            android:parentActivityName=".shoppinglist.ShoppingListActivity" />
        <activity
            android:name=".photos.PhotosActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".controlcenter.ControlCenterActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".messages.MessagesActivity"
            android:parentActivityName=".MainActivity" />

       <!--RECIPES STUFF -->
        <activity
            android:name=".recipes.RecipesActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".recipes.pbj_recipe"
            android:parentActivityName=".recipes.RecipesActivity" />
        <activity android:name=".recipes.cookie_recipe"
            android:parentActivityName=".recipes.RecipesActivity"></activity>
        <activity
            android:name=".recipes.fries_recipe"
            android:parentActivityName=".recipes.RecipesActivity"/>
        <activity
            android:name=".recipes.lasagna_recipe"
            android:parentActivityName=".recipes.RecipesActivity"/>

        <activity
            android:name=".fridgecontents.FridgeContentsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".shoppinglist.ShoppingListActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>